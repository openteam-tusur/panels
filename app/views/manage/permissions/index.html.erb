<div class='row'>
  <div class='col-xs-12'>
    <h1>Управление правами</h1>
  </div>
</div>

<div class='row'>
  <div class='col-xs-12'>
    <p><%= link_to 'Добавить роль', new_manage_permission_path %></p>
  </div>
</div>

<div class='row'>
  <div class='col-xs-12'>
    <% if @permissions.any? %>
      <ul class='list'>
        <%= render @permissions %>
      </ul>
    <% else %>
      <p>Информация отсутствует</p>
    <% end %>
  </div>
</div>
