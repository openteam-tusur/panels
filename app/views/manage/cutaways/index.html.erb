<div class="row">
  <div class='col-xs-12'>
    <div class='page-header'>
      <h1>Перебивки</h1>
    </div>
  </div>
</div>

<div class='row'>
  <div class='col-xs-12'>
      <p>
        <%= link_to 'Добавить новую перебивку', new_manage_cutaway_path, class: 'btn btn-primary btn-sm' %>
      </p>
  </div>
</div>

<div class='table-responsive'>
  <table class='table table-hover'>
    <thead>
      <th>Перебивка</th>
      <th>Управление</th>
    </thead>

    <% @cutaways.all.each do |cutaway| %>
      <tr>
        <td><%= render cutaway %></td>
        <td>
        <%= link_to "<span class='glyphicon glyphicon-eye-open'></span>".html_safe, manage_cutaway_path(cutaway), title: 'Просмотреть', class: 'btn btn-primary btn-sm' %>
        <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, [:edit, :manage, cutaway], title: 'Редактировать', class: 'btn btn-primary btn-sm' %>
        <%= link_to "<span class='glyphicon glyphicon-remove'></span>".html_safe, manage_cutaway_path(cutaway.id), :data => { confirm: 'Вы уверены, что хотите удалить перебивку?'}, :method => :delete , title: 'Удалить', class: 'btn btn-danger btn-sm'%></td>
      </tr>
    <% end %>
  </table>
</div>
